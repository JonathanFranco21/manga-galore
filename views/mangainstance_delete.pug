extends layout

block content

  h1= title
  
  p #[strong Do you really want to delete this MangaInstance?]
  
  div(style="margin-left:20px")

    p #[strong ID]: #{mangainstance._id}
  
    p #[strong Title:] 
      a(href=mangainstance.manga.url) #{mangainstance.manga.title}
    
    p #[strong Imprint:] #{mangainstance.imprint}

    p #[strong Status:] 
      if mangainstance.status=='Currently Publishing'
        span.text-success #{mangainstance.status}
      else
        span.text-warning #{mangainstance.status} 
      
    if mangainstance.status!='Currently Publishing'
      p #[strong Due back:] #{mangainstance.due_back_formatted}

  form(method='POST' action='')
    div.form-group
      input#id.form-control(type='hidden',name='id', required='true', value=mangainstance._id )

    button.btn.btn-primary(type='submit') Delete
extends layout

block content

  h1 Author: #{author.name}
  p #{author.lifespan}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Mangas
    
    dl
    each manga in author_mangas
      dt 
        a(href=manga.url) #{manga.title}
      dd #{manga.summary}

    else
      p This author has no mangas.
      
  hr
  p
    a(href=author.url+'/delete') Delete author
  p
    a(href=author.url+'/update') Update author